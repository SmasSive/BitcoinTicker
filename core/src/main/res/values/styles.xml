<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
         parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="TextAppearance">
    <item name="android:fontFamily">@font/nunito_sans_light</item>
    <item name="android:textSize">@dimen/text_size_normal</item>
    <item name="android:textColor">@color/grey_dark</item>
  </style>

  <style name="TextAppearance.Title">
    <item name="android:fontFamily">@font/nunito_sans_bold</item>
    <item name="android:textSize">@dimen/text_size_big</item>
  </style>

</resources>
